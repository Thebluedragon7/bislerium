@model DashboardViewModel

@{
    ViewBag.Title = "Home";
    Layout = "_DashboardLayout";
}

<div class="container">
    <div>
        <form class="d-inline-flex flex-row align-items-xl-center">
            <label class="form-label">Select Month: </label>
            <input class="form-control" type="month"/>
        </form>
    </div><button class="btn btn-primary" type="button">All Time</button>
    <div class="row gx-5 row-cols-4 mt-5">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Total Blogs</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.TotalBlogs</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Total Upvotes</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.TotalUpvotes</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Total Downvotes</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.TotalDownvotes</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Total Comments</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.TotalComments</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h1>Top 10 Blogs</h1>
            <ul class="list-group">
                <li class="list-group-item">
                    <span>List Group Item 1</span>
                </li>
                <li class="list-group-item">
                    <span>List Group Item 2</span>
                </li>
                <li class="list-group-item">
                    <span>List Group Item 3</span>
                </li>
            </ul>
        </div>
        <div class="col-md-6">
            <h1>Top 10 Bloggers</h1>
            <ul class="list-group">
                <li class="list-group-item">
                    <span>List Group Item 1</span>
                </li>
                <li class="list-group-item">
                    <span>List Group Item 2</span>
                </li>
                <li class="list-group-item">
                    <span>List Group Item 3</span>
                </li>
            </ul>
        </div>
    </div>
</div>