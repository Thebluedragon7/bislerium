@model DashboardViewModel

@{
    ViewBag.Title = "Home";
    Layout = "_DashboardLayout";
}

<div class="container">
    <div>
        <form class="d-inline-flex flex-row align-items-xl-center" asp-controller="Dashboard" asp-action="Index" method="get">
            <label class="form-label">Select Month: </label>
            <input class="form-control" type="month" name="month"/>
            <button type="submit" class="btn btn-primary ms-3">Submit</button>
        </form>
    </div>
    <a class="btn btn-primary" href="@Url.Action("Index", "Dashboard")">All Time</a>
    <div class="row gx-5 row-cols-4 mt-5">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Total Blogs</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.TotalBlogs</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Total Upvotes</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.TotalUpvotes</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Total Downvotes</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.TotalDownvotes</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Total Comments</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.TotalComments</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h1>Top 10 Blogs</h1>
            <ul class="list-group">
                @foreach (var blog in Model.TopBlogs)
                {
                    <li class="list-group-item">
                        <a class="text-decoration-none text-black" asp-controller="Blogs" asp-action="Details" asp-route-id="@blog.Id">
                            <span>@blog.Title - </span> <em>@blog.Author.FullName</em>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="col-md-6">
            <h1>Top 10 Bloggers</h1>
            <ul class="list-group">
                @foreach (var blogger in Model.TopBloggers)
                {
                    <li class="list-group-item">
                        <span>@blogger.FullName - @blogger.Email</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>